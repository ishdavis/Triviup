<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              tools:context=".LandingPageFragmentUser"
              android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="10">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Question #1"
                    android:id="@+id/questionNumberText"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:textAlignment="center"/>

            <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#000000" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="1:30"
                        android:id="@+id/timerText"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:textAlignment="center"
                        android:minWidth="50dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000" />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/questionHeaderLayout"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Q: Which planet rotates the fastest?"
                    android:id="@+id/questionText"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"/>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/answerRadioGroup"
                    android:layout_margin="20dp"
                    android:baselineAligned="false"
                    >

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earth"
                        android:id="@+id/radioAnswer1"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venus"
                        android:id="@+id/radioAnswer2"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jupiter"
                        android:id="@+id/radioAnswer3"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturn"
                        android:id="@+id/radioAnswer4"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Answer"
                android:id="@+id/submitAnswerButton"
                android:layout_gravity="center_horizontal"
                style="?android:textAppearanceSmall"/>
    </LinearLayout>

</LinearLayout>
